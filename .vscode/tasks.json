{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Jekyll",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "GEM_HOME=\"$HOME/gems\" PATH=\"$HOME/gems/bin:$PATH\" bundle exec jekyll serve"
        }
    ]
}